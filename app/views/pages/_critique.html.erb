<% if crit.positive %>
  <div class="positive_comment comment positive_<%=crit.id%>" style="position: relative;">
<% elsif !crit.positive %>
  <div class="negative_comment comment negative_<%=crit.id%>" style="position: relative;">
<% end %>

<% if @isTA %>
  <a data-confirm="Are you sure?" rel="nofollow" onclick="deleteCritque(<%=crit.id%>, '<%=params[:instructor_code]%>');" href="javascript:void(0);" style="position: relative;">
    <span class="glyphicon glyphicon-remove-sign close-comment"></span>
  </a>
<% end %>

  <span class="comment-text"><%= "#{crit.comment}" %></span>
  <div class="critique_vote critique_vote_<%=crit.id%>">
    <%= render 'pages/critique_vote', crit:crit %>
  </div>
</div>
