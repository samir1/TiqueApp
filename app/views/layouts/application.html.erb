<!DOCTYPE html>
<html>
  <head>
    <title>Tique</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <% if logged_in? %>
    <script type="text/javascript">
      function showCode() {
        alert("Your code is <%= current_user.user_code %>");
      }
    </script>
    <% end %>

  </head>

  <body>
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">Tique</a>
          </div>
          <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">
              <li><a href="/">Home</a></li>
              <% if logged_in? %>
                <li><a href="/credentials">Credentials</a></li>
                <li><a href="/my_feedback">My Feedback</a></li>
                <li><a href="#" onclick="showCode();">Get Tiqued</a></li>
                <li><a href="/viewinstructors">View Instructors</a></li>
                <li><a href="/addinstructor">Add Instructor</a></li>
                <li><a href="#">Rules and Tips</a></li>
                <li><a href="#">Help</a></li>
                <li><a href="#">Refer a Friend</a></li>
                <li><a href="#">Advanced</a></li>
                <li><a href="/logout">Logout</a></li>
              <% else %>
                <li><a href="/login">Login</a></li>
              <% end %>
            </ul>
          </div> <!--/.nav-collapse -->
        </div> <!--/.container-fluid -->
      </nav>
    <%= yield %>
  </body>
</html>
